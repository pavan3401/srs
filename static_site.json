{
    "Parameters": {
        "WebsiteDomainName": {
            "Description": "Fully qualified domain name for you website (without www)",
            "Type": "String"
        },
        "WebsiteErrorPage": {
            "Default": "error.html",
            "Description": "Error page for your site",
            "Type": "String"
        },
        "WebsiteIndexPage": {
            "Default": "index.html",
            "Description": "Index page for your site",
            "Type": "String"
        }
    },
    "Resources": {
        "RootBucket": {
            "Properties": {
                "AccessControl": "PublicRead",
                "BucketName": {
                    "Ref": "WebsiteDomainName"
                },
                "WebsiteConfiguration": {
                    "ErrorDocument": {
                        "Ref": "WebsiteErrorPage"
                    },
                    "IndexDocument": {
                        "Ref": "WebsiteIndexPage"
                    }
                }
            },
            "Type": "AWS::S3::Bucket"
        },
        "RootBucketPolicy": {
            "Properties": {
                "Bucket": {
                    "Ref": "RootBucket"
                },
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Effect": "Allow",
                            "Principal": "*",
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "RootBucket"
                                        },
                                        "/*"
                                    ]
                                ]
                            }
                        }
                    ]
                }
            },
            "Type": "AWS::S3::BucketPolicy"
        },
        "WebsiteDNSRecord": {
            "Properties": {
                "Comment": "Records for the root of the hosted zone",
                "HostedZoneName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "WebsiteDomainName"
                            },
                            "."
                        ]
                    ]
                },
                "RecordSets": [
                    {
                        "AliasTarget": {
                            "DNSName": {
                                "Fn::GetAtt": [
                                    "WebsiteDistribution",
                                    "DomainName"
                                ]
                            },
                            "HostedZoneId": "Z2FDTNDATAQYW2"
                        },
                        "Name": {
                            "Fn::Join": [
                                "",
                                [
                                    {
                                        "Ref": "WebsiteDomainName"
                                    },
                                    "."
                                ]
                            ]
                        },
                        "Type": "A"
                    }
                ]
            },
            "Type": "AWS::Route53::RecordSetGroup"
        },
        "WebsiteDistribution": {
            "Properties": {
                "DistributionConfig": {
                    "Aliases": [
                        {
                            "Ref": "WebsiteDomainName"
                        }
                    ],
                    "DefaultCacheBehavior": {
                        "Compress": "true",
                        "ForwardedValues": {
                            "QueryString": "false"
                        },
                        "TargetOriginId": {
                            "Ref": "RootBucket"
                        },
                        "ViewerProtocolPolicy": "redirect-to-https"
                    },
                    "DefaultRootObject": {
                        "Ref": "WebsiteIndexPage"
                    },
                    "Enabled": "true",
                    "Origins": [
                        {
                            "DomainName": {
                                "Fn::GetAtt": [
                                    "RootBucket",
                                    "DomainName"
                                ]
                            },
                            "Id": {
                                "Ref": "RootBucket"
                            },
                            "S3OriginConfig": {}
                        }
                    ]
                }
            },
            "Type": "AWS::CloudFront::Distribution"
        }
    }
}
